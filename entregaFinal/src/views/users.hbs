<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
</head>
<body>
    <h1>Lista de Usuarios</h1>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.apellido}}</td>
                <td>{{this.email}}</td>
                <td>{{this.rol}}</td>
                <td>
                    <!-- Botón para modificar el rol -->
                    <form action="/api/users/admin/{{this.id}}" method="post" style="display:inline;">
                        <select name="role">
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                            <option value="premium">Premium</option>
                        </select>
                        <button type="submit">Modificar Rol</button>
                    </form>
                    
                    <!-- Botón para eliminar el usuario -->
                    <form action="/api/users/delete/{{this.id}}" method="post" style="display:inline;">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
